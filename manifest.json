{
    "manifest_version": 3,
    "name": "Cookie Logger",
    "version": "1.0.0",
    "action": {
        "default_popup": "/assets/popup.html",
        "default_title": "Cookie Logger"
    },
    "background": {
        "service_worker": "src/background/index.js",
        "type": "module"
    },
    "permissions": ["scripting", "activeTab", "tabs", "cookies", "webRequest"],
    "host_permissions": ["https://*/*", "http://*/*"],
    "content_scripts": [
        {
        "matches": ["http://*/*", "https://*/*"],
        "js": ["src/content/index.js"],
        "run_at": "document_start",
        "all_frames": true
        }
    ]
}